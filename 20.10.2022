char Proverka(char Matrix[9][9],int matrix[9][9], int rows, int elements)//сравнивает интовый и чаровский массив 
{                                                                         // Если в интовом массиве прошли какието изменения, в чаровском массиве будут соответсвующие
	for (int i = 0; i < 9; i++)                                            // 0 - неизвестно; 1 - не попал; 2 - попал
	{
		for (int j = 0; j < 9; j++)
		{
			if (matrix[i][j] == 0) //изменений нету
			{
				continue;
			}
			else if (matrix[i][j] == 1) //в этой клетке был совершен ход, но тут не было корабля
			{
				Matrix[i][j] = '0';
			}
			else if (matrix[i][j] == 2) //в эту клетку был совершен ход, и тут был корабль(часть корабля)
			{
				Matrix[i][j] = 'X';
			}
		}
	}
	return Matrix[9][9];//возвращает новый чаровский массив(измененный)
}

