#include<iostream>
#include<time.h>

using namespace std;

char ** Proverka(char ** Matrix,int matrix[][9], const int& rows, const int& elements)//сравнивает интовый и чаровский массив 
{                                                                         // Если в интовом массиве прошли какието изменения, в чаровском массиве будут соответсвующие
	for (int i = 0; i < rows; i++)                                            // 0 - неизвестно; 2 - не попал; 3 - попал
	{
		for (int j = 0; j < elements; j++)
		{
			if (matrix[i][j] == 0) //изменений нету
			{
				continue;
			}
			else if (matrix[i][j] == 2) //в этой клетке был совершен ход, но тут не было корабля
			{
				Matrix[i][j] = '0';
			}
			else if (matrix[i][j] == 3) //в эту клетку был совершен ход, и тут был корабль(часть корабля)
			{
				Matrix[i][j] = 'X';
			}
		}
	}
	return Matrix;//возвращает новый чаровский массив(измененный)
}

